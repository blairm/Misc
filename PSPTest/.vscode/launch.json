{
    "version": "0.2.0",
    //*
    "configurations": [
        {
            "name": "(gdb) Launch PSP",
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "mips",
            "externalConsole": false,
            "stopAtEntry": false,
            "program": "${workspaceRoot}/Build/PSP/PSP_main",
            "cwd": "${workspaceRoot}/Build/PSP/",
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceRoot}/../../../../pspdev/bin/psp-gdb",
            "miDebuggerArgs": "-q",
            "miDebuggerServerAddress": "127.0.0.1:10001",
            "useExtendedRemote": true,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/Build/Linux/Linux_main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/Build/Linux/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}